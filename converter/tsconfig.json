{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "rootDir": "converter/src",
    "outDir": "converter/dist"
  },
  "include": ["converter/src/**/*"],
  "exclude": ["converter/node_mconverter/distes", "dist"]
}
